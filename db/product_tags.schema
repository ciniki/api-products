#
# Description
# -----------
# This table stores the tags associated with products.  The 
# table structure is really basic as the only actions that
# can be done are add or delete, no update.
#
# Fields
# ------
# product_id:		The product the tag is attached to.
# tag:				The tag text.
#

create table product_tags (
	product_id int not null,
	tag varchar(50) not null,
	primary key (product_id, tag)
) ENGINE='InnoDB', COMMENT='v1.01';
