#
# This file will add the uuid to ciniki_products
# which is required for the sync to work.
#
ALTER TABLE ciniki_product_details DROP PRIMARY KEY;
ALTER TABLE ciniki_product_details ADD COLUMN business_id int not null FIRST;
UPDATE ciniki_product_details SET business_id = (SELECT business_id FROM ciniki_products WHERE ciniki_products.id = ciniki_product_details.product_id);
ALTER TABLE ciniki_product_details ADD PRIMARY KEY(business_id, product_id, detail_key);
ALTER TABLE ciniki_product_details COMMENT='v1.02';
